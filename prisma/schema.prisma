generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
}

model User {
  id         Int           @id @default(autoincrement())
  email      String        @unique @db.VarChar(255)
  role       UserRole      @default(STUDENT)
  status     GeneralStatus @default(ACTIVE)
  createdAt  DateTime      @default(now())
  deletedAt  DateTime?
  updatedAt  DateTime      @updatedAt
  firstName  String        @db.VarChar(255)
  middleName String?       @db.VarChar(255)
  familyName String        @db.VarChar(255)
  suffix     String?       @db.VarChar(50)
  student    Student?

  @@index([role, status]) // Common filtering combination
  @@index([email, status]) // Login queries
  @@index([familyName, firstName]) // Name searches
}

model Student {
  id            Int       @id @default(autoincrement())
  userId        Int       @unique
  studentNumber String    @unique @db.VarChar(100)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?
  birthdate     DateTime  @default(now()) @db.Date
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([studentNumber, deletedAt]) // Active student lookups
}

model Feedback {
  id         Int           @id @default(autoincrement())
  type       FeedbackType
  message    String
  suggestion String?
  status     GeneralStatus @default(ACTIVE)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  deletedAt  DateTime?

  @@index([type, status]) // Filter by type and status
  @@index([createdAt]) // Chronological queries
}

model YearLevel {
  id                  Int                  @id @default(autoincrement())
  name                String               @db.VarChar(50)
  status              GeneralStatus        @default(ACTIVE)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  deletedAt           DateTime?
  registrations       Registration[]
  studentApplications StudentApplication[]

  @@index([status]) // Active year level lookups
  @@index([name, status]) // Name-based filtering
}

model AcademicTerm {
  id                  Int                  @id @default(autoincrement())
  year                String               @unique @db.VarChar(20)
  startDate           DateTime             @db.Date
  endDate             DateTime             @db.Date
  status              GeneralStatus        @default(ACTIVE)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  deletedAt           DateTime?
  registrations       Registration[]
  studentApplications StudentApplication[]

  @@index([status, startDate]) // Active term lookups
  @@index([year, status]) // Year-based queries
}

model Registration {
  id                   Int                 @id @default(autoincrement())
  studentApplicationId Int?
  schoolYearId         Int
  registrationType     RegistrationType    @default(NEW)
  yearLevelId          Int
  studentNo            String              @unique @db.VarChar(100)
  familyName           String              @db.VarChar(255)
  firstName            String              @db.VarChar(255)
  middleName           String?             @db.VarChar(255)
  birthdate            DateTime            @db.Date
  placeOfBirth         String              @db.VarChar(255)
  age                  Int
  gender               Gender
  streetAddress        String              @db.VarChar(255)
  city                 String              @db.VarChar(100)
  stateProvince        String              @db.VarChar(100)
  postalCode           String              @db.VarChar(20)
  modeOfPayment        String              @db.VarChar(50)
  amountPayable        Decimal             @db.Decimal(10, 2)
  emailAddress         String              @db.VarChar(255)
  status               RegistrationStatus  @default(PENDING)
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  deletedAt            DateTime?
  contactNumbers       ContactNumber[]
  guardians            Guardian[]
  schoolYear           AcademicTerm        @relation(fields: [schoolYearId], references: [id])
  studentForm          StudentApplication? @relation(fields: [studentApplicationId], references: [id])
  yearLevel            YearLevel           @relation(fields: [yearLevelId], references: [id])
  registrationcode     RegistrationCode[]

  @@index([status, schoolYearId]) // Most common query pattern
  @@index([schoolYearId, yearLevelId, status]) // Dashboard queries
  @@index([studentNo, status]) // Student lookups
  @@index([emailAddress]) // Email-based searches
  @@index([createdAt]) // Recent registrations
  @@index([familyName, firstName]) // Name-based searches
  @@index([registrationType, status]) // Type filtering
}

model Guardian {
  id                Int           @id @default(autoincrement())
  registrationId    Int
  familyName        String        @db.VarChar(255)
  firstName         String        @db.VarChar(255)
  middleName        String?       @db.VarChar(255)
  occupation        String        @db.VarChar(100)
  relationToStudent String        @db.VarChar(100)
  status            GeneralStatus @default(ACTIVE)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  deletedAt         DateTime?
  registration      Registration  @relation(fields: [registrationId], references: [id], onDelete: Cascade)

  @@index([registrationId, status]) // Active guardians per registration
}

model ContactNumber {
  id             Int           @id @default(autoincrement())
  registrationId Int
  number         String        @db.VarChar(50)
  type           String?       @db.VarChar(20)
  status         GeneralStatus @default(ACTIVE)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  deletedAt      DateTime?
  registration   Registration  @relation(fields: [registrationId], references: [id], onDelete: Cascade)

  @@index([registrationId, status]) // Active contacts per registration
  @@index([number]) // Phone number lookups
}

model Requirements {
  id                   Int                @id @default(autoincrement())
  studentApplicationId Int                @default(1)
  requirementType      String             @db.VarChar(100)
  status               RequirementStatus  @default(PENDING)
  fileUrl              String?            @db.VarChar(255)
  description          String?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  deletedAt            DateTime?
  studentApplication   StudentApplication @relation(fields: [studentApplicationId], references: [id], onDelete: Cascade)

  @@index([status, requirementType]) // Filter by status and type
  @@index([createdAt]) // Recent requirements
}

model StudentApplication {
  id                      Int                     @id @default(autoincrement())
  academicYearId          Int
  yearLevelId             Int
  applicationNumber       String?                 @unique @db.VarChar(100)
  familyName              String                  @db.VarChar(255)
  firstName               String                  @db.VarChar(255)
  middleName              String                  @db.VarChar(255)
  nickName                String                  @db.VarChar(100)
  birthdate               DateTime                @db.Date
  placeOfBirth            String                  @db.VarChar(255)
  age                     Int
  birthOrder              Int
  numberOfSiblings        Int
  gender                  Gender
  nationality             String                  @db.VarChar(100)
  religion                String                  @db.VarChar(100)
  heightCm                Decimal                 @db.Decimal(5, 2)
  weightKg                Decimal                 @db.Decimal(5, 2)
  bloodType               String                  @db.VarChar(3)
  languagesSpokenAtHome   String                  @db.VarChar(255)
  childStatus             String                  @default("LEGITIMATE") @db.VarChar(50)
  landlineNumber          String                  @db.VarChar(50)
  mobileNumber            String                  @db.VarChar(50)
  emailAddress            String                  @db.VarChar(255)
  homeAddress             String                  @db.VarChar(255)
  city                    String                  @db.VarChar(100)
  stateProvince           String                  @db.VarChar(100)
  postalCode              String                  @db.VarChar(20)
  provincialAddress       String                  @db.VarChar(255)
  provincialCity          String                  @db.VarChar(100)
  provincialStateProvince String                  @db.VarChar(100)
  provincialPostalCode    String                  @db.VarChar(20)
  talents                 String                  @db.VarChar(255)
  hobbiesInterests        String                  @db.VarChar(255)
  healthHistory           HealthHistory?
  familyBackgrounds       FamilyBackground[]
  siblings                Siblings[]
  educationalBackground   EducationalBackground[]
  transferee              Transferee?
  registrations           Registration[]
  registrationCodes       RegistrationCode[]
  status                  ApplicationStatus       @default(PENDING)
  createdBy               Int
  createdAt               DateTime                @default(now())
  updatedAt               DateTime                @updatedAt
  deletedAt               DateTime?
  academicYear            AcademicTerm            @relation(fields: [academicYearId], references: [id], onDelete: Cascade)
  yearLevel               YearLevel               @relation(fields: [yearLevelId], references: [id], onDelete: Cascade)
  requirements            Requirements[]

  @@index([status, academicYearId]) // Most common filter
  @@index([academicYearId, yearLevelId, status]) // Grade-specific queries
  @@index([emailAddress]) // Email lookups
  @@index([createdBy]) // Applications by user
  @@index([createdAt]) // Recent applications
  @@index([familyName, firstName]) // Name searches
  @@index([mobileNumber]) // Phone lookups
}

model HealthHistory {
  id                     Int                @id @default(autoincrement())
  studentApplicationId   Int                @unique
  childhoodDiseases      String?
  allergies              String?
  otherMedicalConditions String?
  immunizations          String?
  specificHandicaps      String?
  createdBy              Int
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt
  deletedAt              DateTime?
  studentApplication     StudentApplication @relation(fields: [studentApplicationId], references: [id], onDelete: Cascade)
}

model FamilyBackground {
  id                    Int                @id @default(autoincrement())
  studentFormId         Int
  guardianType          GuardianType
  familyName            String             @db.VarChar(255)
  firstName             String             @db.VarChar(255)
  middleName            String?            @db.VarChar(255)
  age                   Int
  birthdate             DateTime           @db.Date
  placeOfBirth          String             @db.VarChar(255)
  nationality           String             @db.VarChar(100)
  religion              String             @db.VarChar(100)
  landLine              String?            @db.VarChar(50)
  mobileNo              String             @db.VarChar(50)
  emailAddress          String             @db.VarChar(255)
  educationalAttainment String             @db.VarChar(255)
  occupation            String             @db.VarChar(100)
  employer              String?            @db.VarChar(255)
  companyAddress        String?            @db.VarChar(255)
  companyCity           String?            @db.VarChar(100)
  businessNo            String?            @db.VarChar(50)
  annualIncome          Decimal?           @db.Decimal(12, 2)
  homeAddress           String             @db.VarChar(255)
  city                  String             @db.VarChar(100)
  stateProvince         String             @db.VarChar(100)
  postalCode            String             @db.VarChar(20)
  parentStatus          String             @db.VarChar(50)
  createdBy             Int
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt
  deletedAt             DateTime?
  studentForm           StudentApplication @relation(fields: [studentFormId], references: [id], onDelete: Cascade)

  @@index([studentFormId, guardianType]) // Family members by type
  @@index([emailAddress]) // Email lookups
  @@index([mobileNo]) // Phone lookups
}

model RegistrationCode {
  id               Int                 @id @default(autoincrement())
  registrationCode String              @unique @db.VarChar(20)
  status           CodeStatus          @default(ACTIVE)
  expirationDate   DateTime?
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  deletedAt        DateTime?
  registrationId   Int?
  applicationId    Int?
  application      StudentApplication? @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  registration     Registration?       @relation(fields: [registrationId], references: [id], onDelete: Cascade)

  @@index([status, expirationDate]) // Active code validation
  @@index([registrationCode, status]) // Code verification
  @@index([applicationId]) // Application lookups
}

model GeneralPolicy {
  id        Int           @id @default(autoincrement())
  title     String        @db.VarChar(255)
  content   String
  status    GeneralStatus @default(ACTIVE)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  deletedAt DateTime?

  @@index([status]) // Active policies
  @@index([updatedAt]) // Recent updates
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum UserRole {
  STUDENT
  ADMIN
  TEACHER
  PARENT
  STAFF
}

enum GeneralStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  ARCHIVED
}

enum RegistrationType {
  NEW
  OLD
  TRANSFER
  RETURNING
}

enum RegistrationStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
  EXPIRED
}

enum CodeStatus {
  ACTIVE
  INACTIVE
  EXPIRED
}

enum RequirementStatus {
  PENDING
  SUBMITTED
  APPROVED
  REJECTED
  INCOMPLETE
}

enum FeedbackType {
  COMPLAINT
  SUGGESTION
  COMPLIMENT
  BUG_REPORT
  FEATURE_REQUEST
}

enum ApplicationStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
  WAITLISTED
}

enum GuardianType {
  FATHER
  MOTHER
  GUARDIAN
  GRANDFATHER
  GRANDMOTHER
  UNCLE
  AUNT
  SIBLING
  OTHER
}

enum ChildStatus {
  BIOLOGICAL
  LEGITIMATE
  ILLEGITIMATE
  ADOPTED
  STEPCHILD
}

enum ParentStatus {
  MARRIED
  SEPARATED
  DIVORCED
  WIDOWED
  SINGLE
  DECEASED
}

model SystemLog {
  id        String   @id @default(cuid())
  logNumber String   @unique
  timestamp DateTime @default(now())

  // User context
  userId    Int?
  userName  String?
  userRole  String?
  sessionId String?

  // Action details
  actionCategory    String // "AUTH", "REGISTRATION", "ACADEMIC"
  actionType        String // "CREATE", "UPDATE", "DELETE"
  actionSubType     String? // "APPROVE", "REJECT", "STATUS_CHANGE"
  actionDescription String

  // Target information
  targetType String // "ACADEMIC_TERM", "REGISTRATION", "USER"
  targetId   String
  targetName String?

  // Change tracking
  oldValues     Json?
  newValues     Json?
  changedFields String[]

  // System context
  ipAddress     String?
  userAgent     String?
  requestMethod String?
  requestUrl    String?

  // Status and results
  status        LogStatus
  errorCode     String?
  errorMessage  String?
  severityLevel SeverityLevel

  // Performance
  executionTimeMs Int?
  metadata        Json?

  // Flags
  isSensitiveData Boolean @default(false)

  // Timestamps
  createdAt  DateTime  @default(now())
  archivedAt DateTime?

  @@index([timestamp]) // Chronological queries
  @@index([userId, timestamp]) // User activity logs
  @@index([actionCategory, timestamp]) // Category-based filtering
  @@index([actionCategory, actionType, timestamp]) // Detailed filtering
  @@index([targetType, targetId]) // Target-based lookups
  @@index([status, severityLevel]) // Error and warning queries
  @@index([sessionId]) // Session tracking
  @@index([ipAddress]) // IP-based analysis
  @@index([severityLevel, timestamp]) // Critical log monitoring
}

enum LogStatus {
  SUCCESS
  FAILED
  WARNING
}

enum SeverityLevel {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// Table for the one-off fields and transferee info
model EducationalBackground {
  id                     Int            @id @default(autoincrement())
  studentFormId          Int            @unique
  yearLevel              String?
  schoolName             String?
  schoolAddress          String?
  inclusiveYearsAttended String?
  honorsAwards           HonorsAwards[]
  attendedSummerClasses  Boolean?
  summerClassDetails     String?
  yearRepeated           String?
  numberOfSubjectsFailed Int?
  createdAt              DateTime       @default(now())
  updatedAt              DateTime       @updatedAt
  deletedAt              DateTime?

  studentForm StudentApplication @relation(fields: [studentFormId], references: [id], onDelete: Cascade)
}

model HonorsAwards {
  id            Int       @id @default(autoincrement())
  educationalId Int
  description   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  educational EducationalBackground @relation(fields: [educationalId], references: [id], onDelete: Cascade)

  @@index([educationalId]) // Awards by educational record
}

model Transferee {
  id                Int              @id @default(autoincrement())
  studentFormId     Int              @unique
  previousSchool    PreviousSchool[]
  presentSchool     PresentSchool[]
  reasonForTransfer String           @db.VarChar(255)
  disiplinaryRecord String?          @db.VarChar(255)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  deletedAt         DateTime?

  studentForm StudentApplication @relation(fields: [studentFormId], references: [id], onDelete: Cascade)
}

model PreviousSchool {
  id               Int       @id @default(autoincrement())
  transferId       Int       @unique
  schoolName       String    @db.VarChar(255)
  schoolAddress    String    @db.VarChar(255)
  inclusiveYears   String    @db.VarChar(100)
  reasonForLeaving String?   @db.VarChar(255)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime?

  transfer Transferee @relation(fields: [transferId], references: [id], onDelete: Cascade)
}

model PresentSchool {
  id               Int       @id @default(autoincrement())
  transferId       Int       @unique
  schoolName       String    @db.VarChar(255)
  schoolAddress    String    @db.VarChar(255)
  inclusiveYears   String    @db.VarChar(100)
  reasonForLeaving String?   @db.VarChar(255)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime?

  transfer Transferee @relation(fields: [transferId], references: [id], onDelete: Cascade)
}

model Siblings {
  id                   Int                @id @default(autoincrement())
  studentApplicationId Int
  familyName           String             @db.VarChar(255)
  firstName            String             @db.VarChar(255)
  middleName           String?            @db.VarChar(255)
  birthDate            DateTime           @db.Date
  age                  Int
  gradeYearLevel       String             @db.VarChar(100)
  schoolEmployer       String             @db.VarChar(255)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  deletedAt            DateTime?
  studentApplication   StudentApplication @relation(fields: [studentApplicationId], references: [id], onDelete: Cascade)
}

model Subject {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  name        String
  description String?
  units       Int
  gradeLevel  String
  department  String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  schedules Schedule[]
  grades    Grade[]
}

model Schedule {
  id         Int      @id @default(autoincrement())
  subjectId  Int
  time       String
  room       String
  instructor String
  day        String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  subject Subject @relation(fields: [subjectId], references: [id])
}

model Grade {
  id            Int      @id @default(autoincrement())
  subjectId     Int
  firstGrading  Int?
  secondGrading Int?
  thirdGrading  Int?
  fourthGrading Int?
  finalGrade    Int?
  remarks       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  subject Subject @relation(fields: [subjectId], references: [id])
}

// =============== NOTIFICATIONS ===============
model Notification {
  id          Int      @id @default(autoincrement())
  date        DateTime
  title       String
  description String
  createdAt   DateTime @default(now())
}
